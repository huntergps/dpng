<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="anita_theme_setting.theme_mode_wizard" model="ir.ui.view">
            <field name="name">Wizard</field>
            <field name="model">anita_theme_setting.theme_mode_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="content">

                        <div class="form-group row">
                            <label class="col-sm-2" for="name">name</label>
                            <div class="col-sm-10">
                                <field name="name" required="1"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2" for="name">name</label>
                            <div class="col-sm-10">
                                <field name="template" required="1"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <field name="color_vars">
                                <tree editable="top" limit="10" create="0" delete="0">
                                    <field name="name" readonly="1" force_save="1" />
                                    <field name="val" widget="color"/>
                                </tree>
                            </field>
                        </div>

                    </div>
                    <footer>

                        <button string="preview"
                                class="btn-secondary"
                                special="save_and_notify"
                                name="preview_creating_mode"/>

                        <button string="save"
                                class="btn-secondary ml-1"
                                special="save_and_return"/>

                        <button string="cancel"
                                class="btn-primary ml-1"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
